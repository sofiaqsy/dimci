<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.NewIncident"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/lblTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="5dp"
        android:text="@string/tipo"
        app:layout_constraintBottom_toTopOf="@+id/cbTipos"
        app:layout_constraintStart_toStartOf="@+id/cbTipos" />

    <Spinner
        android:id="@+id/cbTipos"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="71dp"
        app:layout_constraintBottom_toBottomOf="@+id/lblLugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblLugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:text="@string/lugar"
        app:layout_constraintBottom_toTopOf="@+id/mapLugar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginStart="16dp"
        android:text="@string/descripcion"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtDescripcion"
        app:layout_constraintEnd_toStartOf="@+id/txtDescripcion"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lblFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/foto"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCamara"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtDescripcion"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnCamara"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblDescripcion"
        app:layout_constraintTop_toBottomOf="@+id/mapLugar" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapLugar"
        android:layout_width="368dp"
        android:layout_height="205dp"
        android:layout_marginTop="158dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCamara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:text="Abrir Camara"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtDescripcion" />

</android.support.constraint.ConstraintLayout>